/** @var \Magento\Sales\Block\Order\Totals $block */
?>
<?php foreach ($block->getTotals() as $_code => $_total): ?>
    <?php if ($_total->getBlockName()): ?>
        <?= /* @noEscape */ $block->getChildHtml($_total->getBlockName(), false); ?>
    <?php else: ?>
    <tr class="<?= /* @noEscape */ $_code; ?>">
        <th <?= /* @noEscape */ $block->getLabelProperties(); ?> scope="row">
            <?php if ($_total->getStrong()): ?>
            <strong><?= $block->escapeHtml($_total->getLabel()); ?></strong>
            <?php else: ?>
                <?= $block->escapeHtml($_total->getLabel()); ?>
            <?php endif; ?>
        </th>
        <td 
            <?= /* @noEscape */ $block->getValueProperties(); ?>
            data-th="<?= $block->escapeHtml($_total->getLabel());?>">
            <?php if ($_total->getStrong()): ?>
                <strong><?= /* @noEscape */ $block->formatValue($_total); ?></strong>
            <?php else: ?>
                <?= /* @noEscape */ $block->formatValue($_total); ?>
            <?php endif; ?>
        </td>
    </tr>
    <?php endif; ?>
<?php endforeach; ?>
