<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="forever_team">
        <column xsi:type="int" name="id" padding="10" unsigned="false" identity="true" nullable="false" comment="Entity Id"/>

        <column xsi:type="text" name="name" nullable="true" comment="Name"/>

        <column xsi:type="text" name="designation" nullable="true" comment="Designation"/>

        <column xsi:type="text" name="image" nullable="true" comment="Author Profile"/>
        <column xsi:type="int" name="orders" nullable="true" comment="Sort Order"/>
        
        <column xsi:type="int" name="status" nullable="true" comment="Status"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>        
    </table>
</schema>